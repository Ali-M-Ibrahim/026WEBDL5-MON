@model List<Product>

	<a asp-controller="Product" class="btn btn-success mb-1" asp-action="Create" >Create Product</a>
	<table class="table table-striped table-hover">

		<tr>
			<th>Id</th>
			<th>Name</th>
			<th>Description</th>
			<th>Actions</th>


			@foreach(var obj in Model){
				<tr>
					<td>@obj.Id</td>
									<td>@obj.Name</td>
			<td>@obj.Description</td>
			<td>

				<a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id">Delete</a>
				<a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id">Edit</a>
			</td>
					</tr>
			}
		</tr>
	</table>